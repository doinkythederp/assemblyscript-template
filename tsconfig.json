{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "lib": ["ESNext"],
        "isolatedModules": true,
        "strict": true,
        "exactOptionalPropertyTypes": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "types": [],
        "allowJs": false,
        "noEmit": true
    },
    "include": ["./src/**/*"]
}
